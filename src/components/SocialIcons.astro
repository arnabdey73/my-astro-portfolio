---
const {width, height} = Astro.props;
const socialLinks = [
	{
		title: 'LinkedIn',
		icon: 'simple-icons:linkedin',
		href: 'https://www.linkedin.com/in/arnabdey73/',

	},
	{
		title: 'GitHub',
		icon: 'mdi:github',
		href: 'https://github.com/arnabdey73',

	},
	{
		title: 'Twitter',
		icon: 'ri:twitter-x-fill',
		href: 'https://bsky.app/profile/arnabdey73.bsky.social',

	},
	{
		title: 'CV',
		icon: 'tabler:file-cv',
		href: '../docs/arnabdey_resume.pdf',

	},
];
---

<div class="icons__container">
    {
        socialLinks.map((data) => (
            <a
                href={data.href}
                target="_blank"
                rel="nofollow noreferrer noopener"
            >
                <iconify-icon
					class=`skill__icon ${data.title}`
                    icon={data.icon}
                    width={width}
                    height={height}
                />
            </a>
        ))
    }
</div>

<style>
	.icons__container {
		display: flex;
    width: 29.6rem;
    /* padding: 1.3rem 4rem; */
    justify-content: flex-start;
    align-items: flex-start;
    gap: 2rem;
}
.skill__icon{
	color:#dcd8fc;
}

	.LinkedIn:hover{
		color: #0e76a8;
	}
	.GitHub:hover{
	color: #211F1F;
	}
	.Twitter:hover{
	color: #1DA1F2;
	}
	.CV:hover{
		color:#8e64ff;
	}



</style>